<!DOCTYPE html>
<html>
  
  <head>
    <title>{{ title }}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div>
      <h2 id="title">{{ title }}</h2>
    
      {{#data.businesses}}
      <div class="venue-box">
        <img class="icon" src="{{image_url}}" />
        <h2><a href="/yelp/venue?id={{ id }}">{{ name }}</a></h2>
        <a target="_blank" href="{{url}}">Yelp</a>

        <h3>Address</h3>
        {{#location.display_address}}
          <p>{{.}}</p>
        {{/location.display_address}}
        <p>{{ display_phone }}</p>

        <h3>Categories</h3>
        <ul>
        {{#categories}}
          <li>{{title}}</li>
        {{/categories}}
        </ul>

        <form>
          <h3>Contact Us</h3>
          <input type="text" placeholder="Message" />
          <input type="submit" value="Send" />
        </form>
      </div>
      {{/data.businesses}}
    </div>
  </body>
</html>
